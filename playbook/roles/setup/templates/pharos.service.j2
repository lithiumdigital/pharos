[Unit]
Description=Pharos Node Service
After=network.target
Wants=network.target

[Service]
WorkingDirectory=/data/pharos-testnet/scripts/
ExecStart=/root/.local/bin/pipenv run pharos start domain0.json
SyslogIdentifier={{ network }}
Environment="LD_LIBRARY_PATH=/data/pharos-node/domain0/bin:$LD_LIBRARY_PATH"
LimitNOFILE=65536

[Install]
WantedBy=multi-user.target
